<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a.ciscohelper.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/subnetmaskText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="18sp"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/ipaddressfixed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="0dp"
        app:layout_constraintHorizontal_bias="0.051" />

    <EditText
        android:id="@+id/cidrnumberText"
        android:layout_width="38dp"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="71dp"
        android:ems="0"
        android:hint="24"
        android:inputType="number"
        android:maxLength="2"
        android:singleLine="false"
        android:textAlignment="textStart"
        android:textColorLink="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/ipaddressfixed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ipaddressfixed"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="192.168.1.1/"
        android:textSize="24sp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteX="33dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="84dp" />

    <TextView
        android:id="@+id/intructiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter prefix number:"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="33dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subnet Mask:"
        android:textSize="18sp"
        android:layout_marginStart="67dp"
        tools:layout_editor_absoluteX="61dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/ipaddressfixed" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bits :"
        android:textSize="18sp"
        android:layout_marginStart="136dp"
        tools:layout_editor_absoluteX="130dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/bitborrowedtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/subnetmaskText"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>
